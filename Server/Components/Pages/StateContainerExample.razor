@page "/state-container-example"
@implements IDisposable
@inject StateContainer StateContainer

<h1>Example</h1>

<p>State Container component Property: <b>@StateContainer.SavedString</b></p>

<p>
    <MudButton Variant="Variant.Filled" Color="Color.Secondary" @onclick="ChangePropertyValue">Change</MudButton>
</p>

<Nested />

@code {
    protected override void OnInitialized()
    {
        StateContainer.OnChange += StateHasChanged;
    }

    private void ChangePropertyValue()
    {
        StateContainer.SavedString = "New value set in the State " + $"Container Example component: {DateTime.Now}";
    }

    public void Dispose()
    {
        StateContainer.OnChange -= StateHasChanged;
    }
}